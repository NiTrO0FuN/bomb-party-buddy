{
  "manifest_version": 3,

  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.1",

  "default_locale": "en",

  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.jklm.fun/*"],
      "js": ["content/Game.js", "content/bombpartybuddy.js"],
      "all_frames": true
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["content/injected.js", "words/*.txt"],
      "matches": ["*://*.jklm.fun/*"]
    }
  ]
}

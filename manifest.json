{
  "manifest_version": 3,

  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "1.5.1",

  "default_locale": "en",

  "icons": {
    "48": "icons/icon48.png",
    "96": "icons/icon96.png"
  },

  "action": {
    "default_icon": {
      "48": "icons/icon48.png",
      "96": "icons/icon96.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["*://*.jklm.fun/*"],
      "js": ["content/Game.js", "content/bombpartybuddy.js"],
      "all_frames": true
    }
  ],

  "background": {
    "service_worker": "background/handler.js"
  },

  "web_accessible_resources": [
    {
      "resources": ["content/injected.js", "words/*.txt"],
      "matches": ["*://*.jklm.fun/*"]
    }
  ],
  
  "permissions": [
    "storage"
  ]
}
